<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.andreeagritco.exam.ui.AdminActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/deleteAllSeatsAdmin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DELETE ALL" />

        <Button
            android:id="@+id/getConfirmedSeats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GET CONFIRMED SEATS" />

        <Button
            android:id="@+id/getPurchasedSeats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GET PURCHASED SEATS" />

        <ListView
            android:id="@+id/adminListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
